---
import '@fontsource/montserrat/400.css';
import '@fontsource/montserrat/600.css';
import '@fontsource/montserrat/700.css';
import '@fontsource/source-sans-pro/400.css';
import '@fontsource/source-sans-pro/600.css';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Pits n' Giggles - F1 Sim Racing Telemetry for F1 23, F1 24 and F1 25" } = Astro.props;

// Google Analytics Measurement ID - replace with your actual ID
const GA_MEASUREMENT_ID = 'G-RJ5QKM03ZM'; // Replace with your actual Google Analytics ID
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <Analytics/>
    <SpeedInsights/>
    
    <!-- Google Analytics -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
    <script is:inline define:vars={{ GA_MEASUREMENT_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_MEASUREMENT_ID);
    </script>
    
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <!-- OpenGraph Meta Tags -->
    <meta property="og:title" content="Pits n Giggles | F1 Telemetry Dashboard for Sim Racers" />
    <meta property="og:description" content="Pits n' Giggles provides live telemetry data during F1 races, giving you valuable insights to make informed decisions on track. It is a single standalone executable that requires no install" />
    <meta property="og:image" content="https://github.com/ashwin-nat/pits-n-giggles/blob/main/screenshots/main-ui.png?raw=true" />
    <meta property="og:url" content="https://www.pitsngiggles.com" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Pits n Giggles | F1 Telemetry Dashboard for Sim Racers" />
    <meta name="twitter:description" content="Pits n' Giggles provides live telemetry data during F1 races, giving you valuable insights to make informed decisions on track. It is a single standalone executable that requires no install" />
    <meta name="twitter:image" content="https://github.com/ashwin-nat/pits-n-giggles/blob/main/screenshots/main-ui.png?raw=true" />
    <title>{title} | Pits n' Giggles | F1 Sim Racing Telemetry</title>
  </head>
  <body class="min-h-screen bg-gradient-to-b from-secondary-950 to-secondary-900 text-white font-sans">
    <div class="relative z-10">
      <NavBar />
      <main>
        <slot />
      </main>
      <Footer />
    </div>

    <!-- Racing-inspired background animation -->
    <div class="fixed inset-0 z-0 opacity-10 pointer-events-none">
      <div class="absolute inset-x-0 top-1/4 h-px bg-gradient-to-r from-transparent via-primary-500 to-transparent animate-pulse-gentle"></div>
      <div class="absolute inset-x-0 top-2/4 h-px bg-gradient-to-r from-transparent via-accent-500 to-transparent animate-pulse-gentle delay-700"></div>
      <div class="absolute inset-x-0 top-3/4 h-px bg-gradient-to-r from-transparent via-primary-500 to-transparent animate-pulse-gentle delay-500"></div>
      <div class="absolute inset-y-0 left-1/4 w-px bg-gradient-to-b from-transparent via-accent-500 to-transparent animate-pulse-gentle delay-300"></div>
      <div class="absolute inset-y-0 left-2/4 w-px bg-gradient-to-b from-transparent via-primary-500 to-transparent animate-pulse-gentle delay-100"></div>
      <div class="absolute inset-y-0 left-3/4 w-px bg-gradient-to-b from-transparent via-accent-500 to-transparent animate-pulse-gentle delay-200"></div>
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Montserrat', system-ui, sans-serif;
    color-scheme: dark;
  }

  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 700;
    margin: 0;
  }

  p {
    font-family: 'Source Sans Pro', system-ui, sans-serif;
    margin: 0;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animate-fadeIn {
    animation: fadeIn 0.5s ease-in forwards;
  }

</style>