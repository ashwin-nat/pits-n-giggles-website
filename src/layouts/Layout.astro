---
import '@fontsource/montserrat/400.css';
import '@fontsource/montserrat/600.css';
import '@fontsource/montserrat/700.css';
import '@fontsource/source-sans-pro/400.css';
import '@fontsource/source-sans-pro/600.css';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Pits n' Giggles - F1 Sim Racing Telemetry for F1 23, F1 24 and F1 25" } = Astro.props;

// Google Analytics Measurement ID - replace with your actual ID
const GA_MEASUREMENT_ID = 'G-RJ5QKM03ZM'; // Replace with your actual Google Analytics ID
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    
    <!-- Critical CSS inline to prevent FOUC -->
    <style>
      /* Reset and base styles */
      *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      html {
        font-family: system-ui, -apple-system, sans-serif;
        color-scheme: dark;
        scroll-behavior: smooth;
        line-height: 1.5;
      }
      
      body {
        min-height: 100vh;
        background: linear-gradient(to bottom, #0a0a0a, #1a1a1a);
        color: white;
        font-family: system-ui, -apple-system, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        overflow-x: hidden;
      }
      
      /* Critical layout styles */
      .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }
      
      /* Prevent layout shift for images */
      img {
        max-width: 100%;
        height: auto;
        display: block;
      }
      
      /* Critical navigation styles */
      header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 50;
        background: rgba(10, 10, 10, 0.95);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(51, 51, 51, 1);
      }
      
      /* Hide content initially to prevent FOUC */
      .content-wrapper {
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
      }
      
      .content-loaded {
        opacity: 1;
      }
    </style>
    
    <!-- Bootstrap Icons CDN - preload for faster loading -->
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"></noscript>
    
    <!-- OpenGraph Meta Tags -->
    <meta property="og:title" content="Pits n Giggles | F1 Telemetry Dashboard for Sim Racers" />
    <meta property="og:description" content="Pits n' Giggles provides live telemetry data during F1 races, giving you valuable insights to make informed decisions on track. It is a single standalone executable that requires no install" />
    <meta property="og:image" content="https://github.com/ashwin-nat/pits-n-giggles/blob/main/screenshots/main-ui.png?raw=true" />
    <meta property="og:url" content="https://www.pitsngiggles.com" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Pits n Giggles | F1 Telemetry Dashboard for Sim Racers" />
    <meta name="twitter:description" content="Pits n' Giggles provides live telemetry data during F1 races, giving you valuable insights to make informed decisions on track. It is a single standalone executable that requires no install" />
    <meta name="twitter:image" content="https://github.com/ashwin-nat/pits-n-giggles/blob/main/screenshots/main-ui.png?raw=true" />
    <title>{title} | Pits n' Giggles | F1 Sim Racing Telemetry</title>
    
    <!-- Analytics -->
    <Analytics/>
    <SpeedInsights/>
    
    <!-- Google Analytics -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
    <script is:inline define:vars={{ GA_MEASUREMENT_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_MEASUREMENT_ID);
    </script>
  </head>
  <body>
    <div class="content-wrapper" id="content">
      <div class="relative z-10">
        <NavBar />
        <main>
          <slot />
        </main>
        <Footer />
      </div>

      <!-- Racing-inspired background animation -->
      <div class="fixed inset-0 z-0 opacity-10 pointer-events-none">
        <div class="absolute inset-x-0 top-1/4 h-px bg-gradient-to-r from-transparent via-primary-500 to-transparent animate-pulse-gentle"></div>
        <div class="absolute inset-x-0 top-2/4 h-px bg-gradient-to-r from-transparent via-accent-500 to-transparent animate-pulse-gentle delay-700"></div>
        <div class="absolute inset-x-0 top-3/4 h-px bg-gradient-to-r from-transparent via-primary-500 to-transparent animate-pulse-gentle delay-500"></div>
        <div class="absolute inset-y-0 left-1/4 w-px bg-gradient-to-b from-transparent via-accent-500 to-transparent animate-pulse-gentle delay-300"></div>
        <div class="absolute inset-y-0 left-2/4 w-px bg-gradient-to-b from-transparent via-primary-500 to-transparent animate-pulse-gentle delay-100"></div>
        <div class="absolute inset-y-0 left-3/4 w-px bg-gradient-to-b from-transparent via-accent-500 to-transparent animate-pulse-gentle delay-200"></div>
      </div>
    </div>

    <!-- Content loading script -->
    <script>
      // Show content once DOM is ready
      document.addEventListener('DOMContentLoaded', function() {
        const content = document.getElementById('content');
        if (content) {
          // Small delay to ensure all critical resources are loaded
          setTimeout(() => {
            content.classList.add('content-loaded');
          }, 50);
        }
      });
      
      // Fallback in case DOMContentLoaded already fired
      if (document.readyState === 'loading') {
        // Document is still loading
      } else {
        // Document has already loaded
        const content = document.getElementById('content');
        if (content) {
          content.classList.add('content-loaded');
        }
      }
    </script>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Montserrat', system-ui, sans-serif;
    color-scheme: dark;
  }

  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 700;
    margin: 0;
  }

  p {
    font-family: 'Source Sans Pro', system-ui, sans-serif;
    margin: 0;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animate-fadeIn {
    animation: fadeIn 0.5s ease-in forwards;
  }
</style>