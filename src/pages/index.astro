---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import FeatureCard from '../components/FeatureCard.astro';

// Feature data
const features = [
  {
    title: "Real-time Telemetry",
    description: "Get instant feedback on your driving with millisecond precision telemetry data, including speed, rpm, gear, and forces.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>`
  },
  {
    title: "Performance Analytics",
    description: "Compare your performance against your previous laps and other drivers to identify areas for improvement.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline></svg>`
  },
  {
    title: "Custom Dashboards",
    description: "Create personalized telemetry dashboards with drag-and-drop widgets to focus on the metrics that matter to you.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>`
  },
  {
    title: "Multi-Game Support",
    description: "Compatible with popular sim racing titles including iRacing, Assetto Corsa, F1 series, and more.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>`
  },
  {
    title: "Lap Analysis",
    description: "Break down your laps sector by sector to understand where you're losing or gaining time on the track.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>`
  },
  {
    title: "Race Strategy Calculator",
    description: "Plan your pit stops and fuel strategy with our advanced race strategy calculator.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 2 7 12 12 22 7 12 2"></polygon><polyline points="2 17 12 22 22 17"></polyline><polyline points="2 12 12 17 22 12"></polyline></svg>`
  },
];

// Screenshots
const screenshots = [
  {
    url: "https://images.pexels.com/photos/8943256/pexels-photo-8943256.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    alt: "Telemetry Dashboard with Speed and RPM Gauges"
  },
  {
    url: "https://images.pexels.com/photos/8944055/pexels-photo-8944055.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    alt: "Lap Time Analysis Screen"
  },
  {
    url: "https://images.pexels.com/photos/12156049/pexels-photo-12156049.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    alt: "Track Map with Telemetry Data"
  }
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="pt-32 pb-20 relative">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 bg-gradient-to-r from-primary-500 via-white to-accent-500 bg-clip-text text-transparent">
          Advanced Telemetry for Sim Racing Enthusiasts
        </h1>
        <p class="text-xl text-secondary-300 font-body mb-8">
          Take your sim racing to the next level with real-time data, performance analytics, and custom dashboards designed to help you find those crucial tenths of a second.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <Button href="#download" variant="primary" size="lg">
            Download Now
          </Button>
          <Button href="#features" variant="outline" size="lg">
            Explore Features
          </Button>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative mx-auto max-w-5xl">
        <div class="bg-gradient-to-tr from-primary-500/20 to-accent-500/20 rounded-xl p-2 shadow-xl">
          <img
            src="https://images.pexels.com/photos/29276537/pexels-photo-29276537/free-photo-of-ferrari-formula-1-car-racing-on-wet-track.jpeg"
            alt="Pits n' Giggles Telemetry Dashboard"
            class="rounded-lg w-full h-auto shadow-md"
          />
          <div class="absolute -top-4 -right-4 bg-accent-500 text-white px-4 py-2 rounded-full text-sm font-semibold">
            Coming soon for VR
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Advanced Features</h2>
        <div class="w-20 h-1 bg-primary-500 mx-auto mb-6"></div>
        <p class="text-secondary-300 font-body">
          Pits n' Giggles provides powerful tools to analyze your driving, improve lap times, and enhance your racing experience.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map(feature => (
          <FeatureCard
            title={feature.title}
            description={feature.description}
            icon={feature.icon}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Screenshots Section -->
  <section class="py-20 bg-secondary-950">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">See It In Action</h2>
        <div class="w-20 h-1 bg-primary-500 mx-auto mb-6"></div>
        <p class="text-secondary-300 font-body">
          Explore the intuitive interface and powerful features that make Pits n' Giggles the preferred telemetry solution for sim racers.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {screenshots.map((screenshot, index) => (
          <div class={`rounded-lg overflow-hidden transition-all duration-500 hover:scale-105 shadow-xl ${index === 1 ? 'md:-mt-8' : ''}`}>
            <img
              src={screenshot.url}
              alt={screenshot.alt}
              class="w-full h-auto"
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">What Racers Say</h2>
        <div class="w-20 h-1 bg-primary-500 mx-auto mb-6"></div>
        <p class="text-secondary-300 font-body">
          Hear from sim racers who have improved their performance using Pits n' Giggles.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-accent-500 rounded-full flex items-center justify-center font-bold text-xl mr-4">M</div>
            <div>
              <h4 class="text-white font-semibold">Michael T.</h4>
              <p class="text-secondary-400 text-sm">iRacing Enthusiast</p>
            </div>
          </div>
          <p class="text-secondary-300 font-body">
            "The lap analysis feature helped me find 0.5 seconds on my favorite track. The interface is intuitive and the real-time data is incredibly accurate."
          </p>
        </div>

        <div class="bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-primary-500 rounded-full flex items-center justify-center font-bold text-xl mr-4">S</div>
            <div>
              <h4 class="text-white font-semibold">Sarah K.</h4>
              <p class="text-secondary-400 text-sm">F1 Game Player</p>
            </div>
          </div>
          <p class="text-secondary-300 font-body">
            "Custom dashboards are a game changer. I can focus on exactly what I need during practice, qualifying, and races. The strategy calculator has saved me in endurance events!"
          </p>
        </div>

        <div class="bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-accent-900 rounded-full flex items-center justify-center font-bold text-xl mr-4">J</div>
            <div>
              <h4 class="text-white font-semibold">James R.</h4>
              <p class="text-secondary-400 text-sm">Assetto Corsa Driver</p>
            </div>
          </div>
          <p class="text-secondary-300 font-body">
            "Being able to compare my telemetry with my teammates has transformed our practice sessions. We're all pushing each other to improve using the data."
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Download Section -->
  <section id="download" class="py-20 bg-gradient-to-r from-primary-900 to-accent-900">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Improve Your Lap Times?</h2>
        <p class="text-xl text-secondary-200 font-body mb-8">
          Download Pits n' Giggles now and start analyzing your driving like a professional.
        </p>

        <div class="bg-secondary-950/30 backdrop-blur-sm border border-secondary-800 rounded-lg p-8 max-w-2xl mx-auto">
          <h3 class="text-2xl font-semibold mb-6">Download Options</h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-4 flex flex-col items-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mb-2">
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                <line x1="8" y1="21" x2="16" y2="21"></line>
                <line x1="12" y1="17" x2="12" y2="21"></line>
              </svg>
              <h4 class="text-lg font-semibold mb-1">Windows</h4>
              <p class="text-secondary-400 text-sm mb-3">v1.2.0 - 64-bit</p>
              <Button href="#" variant="accent" size="sm" download>Download (85MB)</Button>
            </div>

            <div class="bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-4 flex flex-col items-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mb-2">
                <path d="M12 3a9 9 0 1 0 9 9"></path>
                <path d="M12 3v9l9 9"></path>
              </svg>
              <h4 class="text-lg font-semibold mb-1">macOS</h4>
              <p class="text-secondary-400 text-sm mb-3">v1.2.0 - Intel/M1</p>
              <Button href="#" variant="accent" size="sm" download>Download (92MB)</Button>
            </div>
          </div>

          <div class="mt-6 text-center">
            <p class="text-secondary-300 text-sm mb-2">
              By downloading, you agree to our <a href="/terms" class="text-accent-400 hover:underline">Terms of Service</a> and <a href="/privacy" class="text-accent-400 hover:underline">Privacy Policy</a>.
            </p>
            <a href="https://github.com/username/pits-n-giggles/releases" target="_blank" rel="noopener noreferrer" class="text-accent-500 hover:text-accent-400 text-sm inline-flex items-center gap-1">
              View all releases on GitHub
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="7" y1="17" x2="17" y2="7"></line>
                <polyline points="7 7 17 7 17 17"></polyline>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl md:text-3xl font-bold mb-4">Stay Updated</h2>
          <p class="text-secondary-300 font-body">
            Subscribe to our newsletter to get the latest updates, racing tips, and exclusive content.
          </p>
        </div>

        <form class="flex flex-col md:flex-row gap-4">
          <input
            type="email"
            placeholder="Your email address"
            class="flex-grow py-3 px-4 bg-secondary-800 border border-secondary-700 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 text-white"
            required
          />
          <button
            type="submit"
            class="bg-accent-500 hover:bg-accent-600 text-white font-semibold py-3 px-6 rounded-md transition-colors duration-200"
          >
            Subscribe
          </button>
        </form>

        <p class="text-secondary-400 text-sm mt-4 text-center">
          We respect your privacy. Unsubscribe at any time.
        </p>
      </div>
    </div>
  </section>
</Layout>