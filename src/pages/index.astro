---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import ImageViewer from '../components/ImageViewer.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import FeatureCard from '../components/FeatureCard.astro';
import { Image } from 'astro:assets';
import { testimonials } from '../data/testimonials';

const heroImage = {
  url: "https://github.com/ashwin-nat/pits-n-giggles/blob/main/screenshots/main-ui.png?raw=true",
  alt: "Pits n' Giggles Telemetry Dashboard",
  description: "The main dashboard showing real-time telemetry data during a race"
};

const features = [
  {
    title: "Real-time Telemetry",
    description: "Get instant feedback on your driving with millisecond precision telemetry data from F1 23, F1 24, and F1 25.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 3v18h18"/><path d="m19 9-5 5-4-4-3 3"/></svg>`
  },
  {
    title: "Advanced Analytics",
    description: "Dive deep into your racing performance with comprehensive analytics tools and lap-by-lap breakdowns.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>`
  },
  {
    title: "Race Strategy",
    description: "Make smarter pit stop decisions with tire wear prediction and fuel consumption analysis.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 6h13l-4 7 4 7H8l4-7-4-7z"/><path d="M6.5 8.5L9 12l-2.5 3.5"/><path d="M2.5 8.5L5 12l-2.5 3.5"/></svg>`
  },
  {
    title: "Streaming Integration",
    description: "Stream your telemetry data live with built-in overlay support for Twitch, YouTube, and other platforms.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M11.64 5.93H13.07V10.21H11.64M15.57 5.93H17V10.21H15.57M7 2L3.43 5.57V18.43H6.85V22L10.42 18.43H13.85L20.57 11.71V2M19.14 11.07L16.35 13.86H13.57L11.14 16.29V13.86H7.71V3.43H19.14Z"/></svg>`
  }
];

const platforms = [
  {
    name: "Windows",
    status: "Available",
    icon: "bi-windows",
    color: "text-blue-400",
    bgColor: "bg-blue-400/10",
    borderColor: "border-blue-400/20"
  },
  {
    name: "macOS",
    status: "Coming Soon",
    icon: "bi-apple",
    color: "text-gray-300",
    bgColor: "bg-gray-300/10",
    borderColor: "border-gray-300/20"
  },
  {
    name: "Linux",
    status: "Coming Soon",
    icon: "bi-ubuntu",
    color: "text-orange-400",
    bgColor: "bg-orange-400/10",
    borderColor: "border-orange-400/20"
  }
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="pt-32 pb-20 relative">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">Advanced Self-Engineering tool for F1 Sim Racing</h1>
        <p class="text-xl text-secondary-300 mb-8">Take your sim racing to the next level with real-time data, performance analytics, and prediction comparisons against other drivers.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <Button href="/about" variant="outline" size="lg">Learn More</Button>
          <Button href="/releases" variant="primary" size="lg">Download Now</Button>
        </div>
      </div>
    </div>

    <!-- Hero Image -->
    <div class="relative mx-auto max-w-5xl">
      <div class="bg-gradient-to-tr from-primary-500/20 to-accent-500/20 rounded-xl p-2 shadow-xl cursor-pointer" data-screenshot>
        <Image
          src={heroImage.url}
          alt={heroImage.alt}
          width={1920}
          height={1080}
          class="rounded-lg w-full h-auto shadow-md"
        />
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-secondary-900/50">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Why Choose Pits n' Giggles?</h2>
        <p class="text-secondary-300">Everything you need to be your own race engineer, all in one lightweight application.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map(feature => (
          <FeatureCard {...feature} />
        ))}
      </div>
      <div class="text-center mt-12">
        <Button href="/features" variant="accent" size="lg">Explore All Features</Button>
      </div>
    </div>
  </section>

  <!-- Supported Platforms Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Supported Platforms</h2>
        <p class="text-secondary-300">Available now on Windows, with macOS and Linux support coming soon.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        {platforms.map(platform => {
          const isAvailable = platform.status === "Available";
          return (
            <div 
              class={`platform-tile relative bg-secondary-900/50 backdrop-blur-sm border ${platform.borderColor} rounded-lg p-6 text-center transition-all duration-300 ${isAvailable ? 'cursor-pointer' : 'cursor-default'}`}
              data-platform={platform.name.toLowerCase()}
              data-available={isAvailable}
              data-href={isAvailable ? '/releases' : ''}
            >
              <div class={`platform-icon ${platform.bgColor} w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 transition-all duration-300`}>
                <i class={`${platform.icon} ${platform.color} text-2xl transition-all duration-300`}></i>
              </div>
              <h3 class="platform-title text-xl font-semibold text-white mb-2 transition-all duration-300">{platform.name}</h3>
              <div class="flex items-center justify-center gap-2">
                {platform.status === "Available" ? (
                  <>
                    <div class="status-dot w-2 h-2 bg-green-500 rounded-full transition-all duration-300"></div>
                    <span class="status-text text-green-400 font-medium text-sm transition-colors duration-300">{platform.status}</span>
                  </>
                ) : (
                  <>
                    <div class="status-dot w-2 h-2 bg-yellow-500 rounded-full transition-all duration-300"></div>
                    <span class="status-text text-yellow-400 font-medium text-sm transition-colors duration-300">{platform.status}</span>
                  </>
                )}
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Quick Start Section -->
  <section class="py-20 bg-secondary-900/50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Race Smarter?</h2>
        <p class="text-xl text-secondary-300 mb-8">
          Get started in minutes. No installation required - just download, run, and connect to your F1 game.
        </p>
        <div class="flex flex-wrap justify-center gap-4 mb-8">
          <Button href="/releases" variant="primary" size="lg">Download Latest Version</Button>
          <Button href="/blog/setting-up-udp-telemetry-f1" variant="outline" size="lg">Setup Guide</Button>
        </div>
        <p class="text-secondary-400 text-sm">
          Supports F1 23, F1 24, and F1 25 • Windows • No account required
        </p>
      </div>
    </div>
  </section>

  {testimonials.length > 0 && (
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">What Racers Say</h2>
          <p class="text-secondary-300">Hear from sim racers who improved their performance with Pits n' Giggles.</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {testimonials.map((testimonial, index) => (
            <TestimonialCard {...testimonial} index={index} />
          ))}
        </div>
      </div>
    </section>
  )}

  <ImageViewer images={[heroImage]} />

  <!-- Platform Tile Click Handler -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const platformTiles = document.querySelectorAll('.platform-tile');
      
      platformTiles.forEach(tile => {
        const isAvailable = tile.dataset.available === 'true';
        const href = tile.dataset.href;
        
        if (isAvailable && href) {
          // Add click functionality for available platforms
          tile.addEventListener('click', function(e) {
            e.preventDefault();
            window.location.href = href;
          });
          
          // Add keyboard accessibility
          tile.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              window.location.href = href;
            }
          });
          
          // Make tiles focusable for keyboard navigation
          tile.setAttribute('tabindex', '0');
          tile.setAttribute('role', 'button');
          tile.setAttribute('aria-label', `View releases for ${tile.dataset.platform}`);
        }
      });
    });
  </script>
</Layout>

<style>
  /* Subtle hover effects only for available platforms */
  .platform-tile[data-available="true"]:hover {
    background: rgba(26, 26, 26, 0.8);
    border-color: rgba(96, 165, 250, 0.4);
    box-shadow: 0 4px 20px rgba(96, 165, 250, 0.15);
  }
  
  /* Windows platform specific hover effects */
  .platform-tile[data-platform="windows"]:hover .platform-icon {
    background: rgba(96, 165, 250, 0.2);
    box-shadow: 0 0 20px rgba(96, 165, 250, 0.3);
  }
  
  .platform-tile[data-platform="windows"]:hover .bi-windows {
    color: rgb(147, 197, 253);
    text-shadow: 0 0 10px rgba(96, 165, 250, 0.5);
  }
  
  .platform-tile[data-platform="windows"]:hover .status-text {
    color: rgb(74, 222, 128);
  }
  
  .platform-tile[data-platform="windows"]:hover .status-dot {
    background-color: rgb(74, 222, 128);
    box-shadow: 0 0 8px rgba(74, 222, 128, 0.6);
  }
  
  /* Focus styles for accessibility - only for available platforms */
  .platform-tile[data-available="true"]:focus {
    outline: 2px solid theme('colors.accent.500');
    outline-offset: 2px;
  }
  
  /* Ensure smooth transitions */
  .platform-tile {
    transition: all 0.3s ease;
  }
  
  .platform-icon {
    transition: all 0.3s ease;
  }
  
  .status-dot {
    transition: all 0.3s ease;
  }
  
  .status-text {
    transition: all 0.3s ease;
  }
</style>