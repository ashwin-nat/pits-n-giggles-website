---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import FeatureCard from '../components/FeatureCard.astro';
import DownloadLink from '../components/DownloadLink.astro';
import ImageViewer from '../components/ImageViewer.astro';

// Feature data (use existing or adjust as needed)
const features = [
  {
    title: "Real-time Telemetry",
    description: "Get instant feedback on your driving with millisecond precision telemetry data.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>`
  },
  {
    title: "Performance Analytics",
    description: "Compare your performance against your previous laps and other drivers to identify areas for improvement.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline></svg>`
  },
  {
    title: "Lap Analysis",
    description: "Break down your laps sector by sector to understand where you're losing or gaining time on the track.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>`
  },
  {
    title: "Tyre and Fuel Management",
    description: "Track your tyre wear and fuel consumption in real-time to make informed pit stop decisions based on predictions.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>`
  },
];

const screenshots = [
  {
    url: "https://github.com/ashwin-nat/pits-n-giggles/blob/main/screenshots/main-ui.png?raw=true",
    alt: "Main UI Dashboard"
  },
  {
    url: "https://github.com/ashwin-nat/pits-n-giggles/blob/main/screenshots/lap-times-modal-ss.png?raw=true",
    alt: "Lap Time Analysis Screen"
  },
  {
    url: "https://github.com/ashwin-nat/pits-n-giggles/blob/main/screenshots/tyre-stint-modal-ss.png?raw=true",
    alt: "Tyre Wear Analysis Screen"
  }
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="pt-32 pb-20 relative">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">Advanced Self-Engineering tool for F1 Sim Racing</h1>
        <p class="text-xl text-secondary-300 mb-8">Take your sim racing to the next level with real-time data and performance analytics.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <DownloadLink variant="primary" size="lg">Download Now</DownloadLink>
          <Button href="#features" variant="outline" size="lg">Explore Features</Button>
        </div>
      </div>
    </div>

    <!-- Hero Image -->
    <div class="relative mx-auto max-w-5xl">
      <div class="bg-gradient-to-tr from-primary-500/20 to-accent-500/20 rounded-xl p-2 shadow-xl">
        <img
          src="https://github.com/ashwin-nat/pits-n-giggles/blob/main/screenshots/main-ui.png?raw=true"
          alt="Pits n' Giggles Telemetry Dashboard"
          class="rounded-lg w-full h-auto shadow-md"
        />
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Advanced Features</h2>
        <p class="text-secondary-300">
          Pits n' Giggles provides powerful tools to analyze your car status and compare your performance against competitors!
        </p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
        {features.slice(0, 4).map(feature => (
          <FeatureCard
            title={feature.title}
            description={feature.description}
            icon={feature.icon}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Screenshots Section -->
  <section class="py-20 bg-secondary-950">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">See It In Action</h2>
        <p class="text-secondary-300">Explore the intuitive interface of Pits n' Giggles that makes it ideal for self engineering</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {screenshots.map((screenshot, index) => (
          <div class={`rounded-lg overflow-hidden transition-all duration-500 hover:scale-105 shadow-xl cursor-pointer ${
            index === 1 ? 'md:translate-y-12' : index === 2 ? 'md:-translate-y-12' : ''
          }`}>
            <img
              src={screenshot.url}
              alt={screenshot.alt}
              class="w-full h-64 object-cover"
              data-screenshot
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">What Racers Say</h2>
        <p class="text-secondary-300">Hear from sim racers who improved their performance with Pits n' Giggles.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-accent-500 rounded-full flex items-center justify-center font-bold text-xl mr-4">K</div>
            <div>
              <h4 class="text-white font-semibold">Katpadi Kumar</h4>
              <p class="text-secondary-400 text-sm">Monza T1 Enjoyer</p>
            </div>
          </div>
          <p class="text-secondary-300 font-body">
            "I like car."
          </p>
        </div>

        <div class="bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-primary-500 rounded-full flex items-center justify-center font-bold text-xl mr-4">S</div>
            <div>
              <h4 class="text-white font-semibold">Sarah K.</h4>
              <p class="text-secondary-400 text-sm">F1 Game Player</p>
            </div>
          </div>
          <p class="text-secondary-300 font-body">
            "Custom dashboards are a game changer. I can focus on exactly what I need during practice, qualifying, and races. The strategy calculator has saved me in endurance events!"
          </p>
        </div>

        <div class="bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-accent-900 rounded-full flex items-center justify-center font-bold text-xl mr-4">J</div>
            <div>
              <h4 class="text-white font-semibold">James R.</h4>
              <p class="text-secondary-400 text-sm">Assetto Corsa Driver</p>
            </div>
          </div>
          <p class="text-secondary-300 font-body">
            "Being able to compare my telemetry with my teammates has transformed our practice sessions. We're all pushing each other to improve using the data."
          </p>
        </div>
      </div>
    </div>
  </section>

  <ImageViewer images={screenshots} />
</Layout>