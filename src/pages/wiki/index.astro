---
import WikiLayout from '../../layouts/WikiLayout.astro';
import { getCollection } from 'astro:content';

// Get all wiki pages from content collection
const allWikiPages = await getCollection('wiki');

// Get some stats for the intro page
const totalPages = allWikiPages.length;
const featuredPages = allWikiPages.filter(page => page.data.featured);
const recentPages = [...allWikiPages]
  .sort((a, b) => new Date(b.data.lastUpdated).getTime() - new Date(a.data.lastUpdated).getTime())
  .slice(0, 3);

// Define categories and get counts
const categories = [
  { name: 'Getting Started', description: 'Essential guides for new users' },
  { name: 'Configuration', description: 'Setup and configuration guides' },
  { name: 'Features', description: 'Detailed feature explanations' },
  { name: 'Troubleshooting', description: 'Common issues and solutions' },
  { name: 'Advanced', description: 'Advanced topics and techniques' }
];

const categoryCounts = categories.map(category => ({
  ...category,
  count: allWikiPages.filter(page => page.data.category === category.name).length
}));
---

<WikiLayout 
  title="Wiki" 
  description="Comprehensive documentation and guides for Pits n' Giggles F1 telemetry application."
>
  <div class="p-8 max-w-4xl">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold mb-4">Welcome to the Pits n' Giggles Wiki</h1>
      <p class="text-xl text-secondary-300 mb-6">
        Your comprehensive guide to mastering F1 telemetry analysis and getting the most out of Pits n' Giggles.
      </p>
      <div class="flex flex-wrap gap-6 text-sm text-secondary-400">
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
          <span>{totalPages} total pages</span>
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
            <path d="M3 6h18"></path>
            <path d="M3 12h18"></path>
            <path d="M3 18h18"></path>
          </svg>
          <span>{categories.length} categories</span>
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
            <polygon points="12 2 15.09 8.26 22 9 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9 8.91 8.26 12 2"></polygon>
          </svg>
          <span>{featuredPages.length} featured guides</span>
        </div>
      </div>
    </div>

    <!-- Quick Start Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        Quick Start
      </h2>
      <div class="bg-secondary-900/50 border border-secondary-800 rounded-lg p-6 mb-6">
        <p class="text-secondary-300 mb-4">
          New to Pits n' Giggles? Start with these essential guides to get up and running quickly.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <a href="/wiki/getting-started" class="flex items-center gap-3 p-4 bg-secondary-800/50 rounded-lg hover:bg-secondary-700/50 transition-colors group no-underline">
            <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
                <path d="M5 12l5 5l10-10"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-white group-hover:text-accent-400 transition-colors">Getting Started</h3>
              <p class="text-sm text-secondary-400">Complete setup guide</p>
            </div>
          </a>
          <a href="/wiki/udp-configuration" class="flex items-center gap-3 p-4 bg-secondary-800/50 rounded-lg hover:bg-secondary-700/50 transition-colors group no-underline">
            <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-400">
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-white group-hover:text-accent-400 transition-colors">UDP Configuration</h3>
              <p class="text-sm text-secondary-400">Network setup guide</p>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Guides -->
    {featuredPages.length > 0 && (
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
            <polygon points="12 2 15.09 8.26 22 9 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9 8.91 8.26 12 2"></polygon>
          </svg>
          Featured Guides
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {featuredPages.map(page => (
            <a href={`/wiki/${page.slug}`} class="block p-6 bg-secondary-900/50 border border-secondary-800 rounded-lg hover:border-secondary-700 transition-all duration-200 group no-underline">
              <div class="flex items-start justify-between mb-3">
                <span class="text-xs px-2 py-1 bg-secondary-800 text-secondary-300 rounded">
                  {page.data.category}
                </span>
                <span class="bg-accent-500 text-white text-xs px-2 py-1 rounded">
                  Featured
                </span>
              </div>
              <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-accent-400 transition-colors">
                {page.data.title}
              </h3>
              <p class="text-secondary-300 text-sm">
                {page.data.description}
              </p>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Categories Overview -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
          <path d="M3 6h18"></path>
          <path d="M3 12h18"></path>
          <path d="M3 18h18"></path>
        </svg>
        Browse by Category
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {categoryCounts.map(category => (
          <div class="p-4 bg-secondary-900/50 border border-secondary-800 rounded-lg">
            <h3 class="font-semibold text-white mb-2">{category.name}</h3>
            <p class="text-sm text-secondary-300 mb-2">{category.description}</p>
            <p class="text-xs text-secondary-400">
              {category.count} {category.count === 1 ? 'page' : 'pages'}
            </p>
          </div>
        ))}
      </div>
    </section>

    <!-- Recent Updates -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
        Recently Updated
      </h2>
      <div class="space-y-3">
        {recentPages.map(page => (
          <a href={`/wiki/${page.slug}`} class="flex items-center justify-between p-4 bg-secondary-900/50 border border-secondary-800 rounded-lg hover:border-secondary-700 transition-colors group no-underline">
            <div>
              <h3 class="font-medium text-white group-hover:text-accent-400 transition-colors">
                {page.data.title}
              </h3>
              <p class="text-sm text-secondary-400">{page.data.category}</p>
            </div>
            <span class="text-xs text-secondary-400">
              {new Date(page.data.lastUpdated).toLocaleDateString()}
            </span>
          </a>
        ))}
      </div>
    </section>

    <!-- Getting Help -->
    <section class="bg-secondary-900/50 border border-secondary-800 rounded-lg p-6">
      <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
          <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
          <circle cx="12" cy="12" r="10"></circle>
          <path d="M12 17h.01"></path>
        </svg>
        Need Help?
      </h2>
      <p class="text-secondary-300 mb-4">
        Can't find what you're looking for? Here are some ways to get additional support:
      </p>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a href="https://discord.gg/pq3R49wR3d" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 p-3 bg-secondary-800/50 rounded-lg hover:bg-secondary-700/50 transition-colors no-underline">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-indigo-400">
            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
          </svg>
          <div>
            <div class="font-medium text-white">Discord Community</div>
            <div class="text-xs text-secondary-400">Get real-time help</div>
          </div>
        </a>
        <a href="https://github.com/ashwin-nat/pits-n-giggles/issues" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 p-3 bg-secondary-800/50 rounded-lg hover:bg-secondary-700/50 transition-colors no-underline">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-gray-300">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <div>
            <div class="font-medium text-white">GitHub Issues</div>
            <div class="text-xs text-secondary-400">Report bugs & requests</div>
          </div>
        </a>
      </div>
    </section>
  </div>
</WikiLayout>