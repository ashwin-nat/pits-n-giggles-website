---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-6 transition-all duration-300 hover:shadow-card hover:border-secondary-700 hover:-translate-y-1">
  <div class="bg-gradient-to-br from-accent-600 to-accent-400 w-12 h-12 rounded-md flex items-center justify-center mb-4">
    <span class="text-white" set:html={icon}></span>
  </div>
  <h3 class="text-xl font-semibold text-white mb-2">{title}</h3>
  <p class="text-secondary-300 font-body">{description}</p>
</div>