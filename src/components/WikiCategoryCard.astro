---
interface Props {
  category: {
    name: string;
    description: string;
    icon: string;
    color: string;
  };
  pageCount: number;
}

const { category, pageCount } = Astro.props;
---

<div class="bg-secondary-900/50 backdrop-blur-sm border border-secondary-800 rounded-lg p-6 transition-all duration-300 hover:shadow-card hover:border-secondary-700 hover:-translate-y-1">
  <div class={`w-12 h-12 rounded-md flex items-center justify-center mb-4 bg-gradient-to-br from-accent-600 to-accent-400`}>
    <span class="text-white" set:html={category.icon}></span>
  </div>
  
  <h3 class="text-xl font-semibold text-white mb-2">{category.name}</h3>
  <p class="text-secondary-300 font-body mb-4">{category.description}</p>
  
  <div class="flex items-center justify-between">
    <span class="text-secondary-400 text-sm">
      {pageCount} {pageCount === 1 ? 'page' : 'pages'}
    </span>
    <span class={`text-sm font-medium ${category.color}`}>
      View pages â†’
    </span>
  </div>
</div>